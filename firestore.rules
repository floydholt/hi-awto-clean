rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users (for roles)
    match /users/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Listings
    match /listings/{id} {
      allow read: if true;

      // Admin can modify anything
      allow write: if request.auth.token.role == "admin";

      // Owner can modify their own listing (NOT AI fields)
      allow update: if request.auth.uid == resource.data.ownerId
        && !( "aiTags" in request.resource.data
           || "aiCaption" in request.resource.data
           || "aiPricing" in request.resource.data
           || "aiFraud" in request.resource.data
           || "fraudReviewStatus" in request.resource.data
        );
    }

    // Fraud Events collection
    match /fraudEvents/{id} {
      allow read: if request.auth.token.role == "admin";
      allow write: if request.auth.token.role == "admin";
    }
  }
}
