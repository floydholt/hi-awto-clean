// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* -----------------------------
       Helper Functions
    ----------------------------- */
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.role == "admin";
    }

    function isAgent() {
      return isSignedIn() && request.auth.token.role == "agent";
    }

    function isSeller() {
      return isSignedIn() && request.auth.token.role == "seller";
    }

    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // Prevent client from touching server-only fields
    function clientTouchesAIFields() {
      return
        "aiPricing" in request.resource.data ||
        "aiDescription" in request.resource.data ||
        "aiVision" in request.resource.data ||
        "aiFraud" in request.resource.data ||
        "aiSummary" in request.resource.data ||
        "processedAt" in request.resource.data ||
        "brochureUrl" in request.resource.data;
    }

    function listingOwnerId() {
      return resource == null
        ? request.resource.data.ownerId
        : resource.data.ownerId;
    }

    /* -----------------------------
       Users
    ----------------------------- */
    match /users/{uid} {
      allow read: if isSignedIn();
      allow create: if isUser(uid);
      // Users cannot escalate their own role
      allow update: if isUser(uid) && request.resource.data.role == resource.data.role;
      allow delete: if false; // no self-delete
    }

    /* -----------------------------
       Listings
    ----------------------------- */
    match /listings/{listingId} {
      // Buyers can read published listings
      allow read: if resource.data.status == "published" || isAgent() || isAdmin();

      // Sellers can create their own listings
      allow create: if isSeller() &&
                    request.resource.data.ownerId == request.auth.uid &&
                    !clientTouchesAIFields();

      // Sellers can update their own listings
      allow update: if isSeller() &&
                    listingOwnerId() == request.auth.uid &&
                    !clientTouchesAIFields();

      // Agents can moderate status only
      allow update: if isAgent() &&
                    request.resource.data.keys().hasOnly(["status"]);

      // Admins full control
      allow read, write: if isAdmin();
    }

    /* -----------------------------
       Brochures
    ----------------------------- */
    match /brochures/{brochureId} {
      allow read: if isSignedIn(); // or make public if desired
      allow create, update: if isSeller() &&
                            request.auth.uid == request.resource.data.ownerId;
      allow read, write: if isAdmin();
    }

    /* -----------------------------
       Leads
    ----------------------------- */
    match /leads/{leadId} {
      // Buyers can create leads for themselves
      allow create: if isSignedIn() &&
                    request.resource.data.buyerId == request.auth.uid;

      // Sellers can read leads tied to their listings
      allow read: if isSignedIn() &&
                  request.auth.uid == resource.data.listingOwnerId;

      // Agents can read/write leads
      allow read, write: if isAgent();

      // Admins full control
      allow read, write: if isAdmin();
    }

    /* -----------------------------
       Threads + Messages
    ----------------------------- */
    match /threads/{threadId} {
      allow read: if isAdmin() ||
                  (isSignedIn() && request.auth.uid in resource.data.participantIds);

      allow create: if isSignedIn() &&
                    request.auth.uid in request.resource.data.participantIds;

      allow update: if isAdmin() ||
                    (isSignedIn() && request.auth.uid in resource.data.participantIds);

      allow delete: if isAdmin();

      match /messages/{messageId} {
        allow read: if isAdmin() ||
                    (isSignedIn() && request.auth.uid in resource.data.participantIds);

        allow create: if isSignedIn() &&
                      request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participantIds &&
                      request.resource.data.senderId == request.auth.uid;

        allow update, delete: if isAdmin();
      }
    }

    /* -----------------------------
       Admin Collections
    ----------------------------- */
    match /adminLogs/{docId} {
      allow read: if isAdmin();
      allow write: if false; // system-only
    }

    match /fraudEvents/{docId} {
      allow read: if isAdmin();
      allow write: if false; // system-only
    }

    match /adminMetrics/{docId} {
      allow read: if isAdmin();
      allow write: if false; // system-only
    }

    /* -----------------------------
       FALLBACK
    ----------------------------- */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
